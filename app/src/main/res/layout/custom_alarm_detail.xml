<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/chitiet_nhacnho_maukhung">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/chitiet_nhacnho_stt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="1"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/chitiet_nhacnho_tenthuoc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="ten thuoc"
            android:gravity="center|left"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/chitiet_nhacnho_soluong"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="20 Vien"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/chitiet_nhacnho_conlai"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="20 Vien"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>