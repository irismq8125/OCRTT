<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/chitiet_khung"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<!--    số thứ tự-->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/chitiet_stt"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"/>

    </LinearLayout>

<!--    tên thuốc và cách dùng-->
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/chitiet_tenthuoc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Tên thuốc"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center|left"/>

        <TextView
            android:id="@+id/chitiet_thoigian"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Thời gian"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:gravity="center|left"/>

        <TextView
            android:id="@+id/chitiet_cachdung"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Cách dùng"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:gravity="center|left"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

<!--    số lượng-->
    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|top"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/chitiet_soluong"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="20 Viên"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>