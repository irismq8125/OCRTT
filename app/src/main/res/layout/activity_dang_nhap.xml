<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.DangNhapActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:background="@drawable/blue_bg">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/logo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_login">

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/phone"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_dienthoai"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:paddingLeft="25dp"
                    android:hint="Nhập số điện thoại"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:maxLength="11"
                    android:background="@drawable/radius_box_login"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/radius_login">

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/pass"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_matkhau"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:paddingLeft="25dp"
                    android:hint="Nhập mật khẩu"
                    android:textSize="24sp"
                    android:inputType="textPassword"
                    android:background="@drawable/radius_box_login"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_dangnhap"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="Đăng nhập"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:textColor="@color/mauchu"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/radius"/>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_quenmatkhau"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Quên mật khẩu ?"
            android:gravity="center|bottom"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#2196F3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@drawable/blue_bg"
        android:rotation="180"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_dangky"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=" Tại đây!"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:rotation="180"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Tạo tài khoản mới."
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/maunen"
            android:rotation="180"/>

    </LinearLayout>

</LinearLayout>