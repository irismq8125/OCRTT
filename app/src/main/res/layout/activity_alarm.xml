<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmActivity"
    android:orientation="vertical"
    android:background="@color/maunen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/blue">

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/back_1"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thông tin nhắc nhở"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/blue"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Chi tiết nhắc nhở"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center|left"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/chitiet_nhacnho_donthuoc"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Tên đơn thuốc"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center|left"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/chitiet_nhacnho_thoigian"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Thoi gian dung"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Sang"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Chieu"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/chitiet_nhacnho_giosang"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Sang"
                            android:textSize="16sp"
                            android:gravity="center|left"/>
                        <TextView
                            android:id="@+id/chitiet_nhacnho_giochieu"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Chieu"
                            android:textSize="16sp"
                            android:gravity="center|left"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Trua"
                            android:textSize="16sp"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Toi"
                            android:textSize="16sp"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/chitiet_nhacnho_giotrua"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Sang"
                            android:textSize="16sp"
                            android:gravity="center|left"/>
                        <TextView
                            android:id="@+id/chitiet_nhacnho_giotoi"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Chieu"
                            android:textSize="16sp"
                            android:gravity="center|left"/>

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="35dp"
               android:text="Thông tin toa thuốc"
               android:textSize="16sp"
               android:textColor="@color/black"
               android:gravity="center|left"
               android:layout_margin="10dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:background="@color/white">

               <TextView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:text="STT"
                   android:gravity="center"/>

               <TextView
                   android:layout_width="200dp"
                   android:layout_height="50dp"
                   android:layout_weight="1"
                   android:text="Ten thuoc"
                   android:gravity="center|left"
                   android:paddingLeft="60dp"/>

               <TextView
                   android:layout_width="60dp"
                   android:layout_height="50dp"
                   android:text="SL"
                   android:gravity="center"/>

               <TextView
                   android:layout_width="70dp"
                   android:layout_height="50dp"
                   android:text="Con lai"
                   android:gravity="center"/>

           </LinearLayout>

           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/chitiet_nhacnho_danhsach"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp" />

               </LinearLayout>

           </ScrollView>

       </LinearLayout>

    </LinearLayout>

</LinearLayout>